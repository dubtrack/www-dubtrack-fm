#main_avatar_room
	display none
	position relative
	width 100%
	height 100%
	padding: 6.5rem 0 1rem 0

	.avatar_tools
		position absolute
		padding: 0 1rem
		width 100%
		top 4rem
		left 0
		display block
		margin-bottom 1rem

		input
			border-bottom 1px solid $meta-color
			padding 0

	.loadingAva
		display none

	#avatar
	.tabsContainer
		width 100%
		height 100%

	#main-user-list-room
		width 100%
		height 100%
		position relative
		overflow scroll

		#avatar-list
			padding 0 1rem

			li
				display block
				margin-bottom 0.5rem
				cursor pointer

				&.mod
				&.creator
				&.admin
				&.currentDJ
				&.co-owner
				&.vip
				&.resident-dj
				&.dj
				&.manager
					p.username
						&:after
							content " Mod"
							color $accent-color
							font-weight bold
							display inline-block
							margin-left 0.5rem

				&.co-owner
					p.username
						&:after
							content " Co-owner"

				&.creator
					p.username
						&:after
							content " Creator" !important

				&.vip
					p.username
						&:after
							content " VIP"

				&.resident-dj
					p.username
						&:after
							content " Resident DJ"

				&.dj
					p.username
						&:after
							content " DJ"

				&.manager
					p.username
						&:after
							content " Manager"

				&.admin
					p.username
						&:after
							content " Admin" !important

				&.currentDJ
					p.username
						&:after
							content " current DJ" !important

				p
					display inline-block
					margin 0
					padding 0
					font-weight bold

					&.dubs
						text-align right
						float right
						color $meta-color
