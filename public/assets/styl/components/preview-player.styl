.playerPreview
	border-radius 1rem
	position absolute
	top 20%
	background #000
	z-index 99999
	width 43rem
	max-width 100%
	padding 1.5rem 1.5rem 3rem 1.5rem
	left 50%
	transform translateX(-50%)
	-webkit-filter blur(0)
	filter blur(0)
	transform-style preserve-3d
	backface-visibility hidden

	.playerDubContainer
		position relative
		padding-bottom 59%
		background #000

		iframe
		img
			position absolute
			top 0rem
			left 0
			width 100%
			height 100%

	.close
		position absolute
		top 1rem
		right 1rem
		z-index 99
		width 2rem
		height 2rem
		background #000
		padding 0.5rem
		cursor pointer

		img
			opacity 0.2

			&:hover
				opacity 0.5

	.playerImage
		position absolute
		top 0
		left 0

		img
			width 100%

		&.SCplayerImage
			width 100%
			height 100%

			img
				position absolute
				width 5rem
				height 5rem
				top 50%
				left 50%
				transform translate(-50%, -50%)
				-webkit-filter blur(0)
				filter blur(0)
				transform-style preserve-3d
				backface-visibility hidden

	.controlContainer
		width 100%
		position absolute
		bottom -1.5rem
		right 0
		z-index 9

		.buttons
			float left
			width 1rem
			height 1rem
			margin 0 1.5rem 0 0.5rem
			z-index 10
			position relative
			opacity 0.7

			a
				display block

				span
					font-size 1.4rem
					color #fff

		.progressContainer
			float left
			width 65%
			height 0.5rem
			background #000
			margin 0.5rem 0 0 0
			cursor pointer
			position relative
			z-index 10
			border 1px solid rgba(255, 255, 255, 0.1)
			border-radius 1rem

			.progress
			.loaded
				height 0.4rem
				width 0
				background $accent-color
				position absolute
				z-index 5
				top 0
				left 0
				border-radius 0 0.25rem 0.25rem 0

			.loaded
				zoom 1
				opacity 0.3
				z-index 2

	.volume-container
		float right
		position relative
		width: 9rem
		margin-top 0.5rem
		z-index 10

	.volume-control
		border 1px solid rgba(255, 255, 255, 0.1)
		border-radius 1rem
		width 5rem
		position absolute
		height 0.5rem
		background #000
		left 1.5rem

	.tooltip
		display none !important

	.ui-slider-handle
		border-radius 100%
		background $accent-color
		position absolute
		z-index 2
		width 1rem
		height 1rem
		cursor pointer
		font-weight bold
		outline none
		top -0.3rem
		margin-left -0.4rem
		border 0
		box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.6)

	.ui-slider-range
		background $accent-color
		position absolute
		border 0
		top 0
		height 100%

	.loading
	.buffering
	.replay
	.error
		color #fff
		text-transform uppercase
		font-weight bold
		font-size 1rem
		position absolute
		top 50%
		left 50%
		display block
		z-index 9
		background $accent-color
		transform translate(-50%, -50%)
		-webkit-filter blur(0)
		filter blur(0)
		transform-style preserve-3d
		backface-visibility hidden
		padding 1rem 2rem

	.error
		background $accent-other-color

	.replay
		cursor pointer
